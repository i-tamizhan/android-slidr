<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="com.github.tamizhan.slidr.MainActivity">

    <com.github.tamizhan.androidslidr.Slidr
        android:id="@+id/slideure"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tmp"
        android:layout_gravity="top|center_horizontal"
        android:layout_margin="20dp"
        app:slidr_region_leftColor="@color/colorLeft"
        app:slidr_regions_centerText="false" />

</FrameLayout>
